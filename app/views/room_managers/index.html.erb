<p id="notice"><%= notice %></p>

<h1>Reader List</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_managers.each do |room_manager| %>
      <tr>
        <td><%= room_manager.first_name %></td>
        <td><%= room_manager.last_name %></td>
        <td><%= room_manager.email %></td>
        <td><%= room_manager.phone %></td>
        <td><%= room_manager.address %></td>
        <td><%= link_to 'Show', room_manager %></td>
        <td><%= link_to 'Edit', edit_room_manager_path(room_manager) %></td>
        <td><%= link_to 'Destroy', room_manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

